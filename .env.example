# STS Neural Agent - Cloud Environment Configuration
# Copy this to .env and customize for your cloud setup

# ======================
# Storage Configuration
# ======================
# Path to persistent storage (mounted volume/disk)
DATA_PATH=/mnt/sts-data
# Alternative paths:
# DATA_PATH=/opt/sts-data              # Generic cloud
# DATA_PATH=/var/lib/sts-training      # System location
# DATA_PATH=/home/ubuntu/sts-data      # User home

# ======================
# Weights & Biases Setup
# ======================
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=sts-neural-agent
WANDB_ENTITY=your_wandb_username

# ======================
# Training Configuration
# ======================
EPISODES=2000
REWARD_FUNCTION=comprehensive
HIDDEN_SIZE=512
BATCH_SIZE=64
LEARNING_RATE=3e-4

# Experiment naming
EXPERIMENT_NAME=cloud-training
EXTRA_TAGS=cloud gpu production

# ======================
# Jupyter Configuration
# ======================
JUPYTER_PORT=8888
JUPYTER_TOKEN=your_secure_token_here
# JUPYTER_PASSWORD=sha256_hashed_password

# ======================
# Model Evaluation
# ======================
MODEL_PATH=sts_models/final_model.pt
EVAL_GAMES=100

# ======================
# Cloud Provider Specific
# ======================
# AWS
AWS_REGION=us-west-2
S3_BACKUP_BUCKET=your-sts-backup-bucket

# GCP  
GCP_PROJECT=your-project-id
GCS_BACKUP_BUCKET=your-sts-backup-bucket

# Azure
AZURE_STORAGE_ACCOUNT=yourstorageaccount
AZURE_CONTAINER=sts-backup

# ======================
# Docker Configuration
# ======================
COMPOSE_PROJECT_NAME=sts-neural-agent
CUDA_VISIBLE_DEVICES=0
PYTHONUNBUFFERED=1
OMP_NUM_THREADS=4